<!DOCTYPE menu [
  <!ENTITY pipes "/usr/share/archcraft/openbox/pipemenus">
]>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/  file:///usr/share/openbox/menu.xsd">
  <menu id="root-menu" title="Menu" label="Openbox 3">
<!--	<separator label="Main Menu"/>  -->
		<item label="Terminal Emulator">
			<action name="Execute">
				<command>alacritty</command>
			</action>
		</item>
		<item label="File Manager">
			<action name="Execute">
				<command>thunar</command>
			</action>
		</item>
		<item label="Web Browser">
			<action name="Execute">
				<command>firefox</command>
			</action>
		</item>
		<item label="Text Editor">
			<action name="Execute">
				<command>geany</command>
			</action>
		</item>
		<separator/>
		<item label="Lock Screen">
			<action name="Execute">
				<command>/usr/bin/lockscreen.sh</command>
			</action>
		</item>
		<menu id="Exit" label="System">
				<item label="Logout">
					<action name="Execute">
						<command>openbox --exit</command>
					</action>
				</item>
				<item label="Suspend">
					<action name="Execute">
						<command>/usr/bin/suspend.sh</command>
					</action>
				</item>
				<item label="Reboot">
					<action name="Execute">
						<command>/usr/bin/reboot.sh</command>
					</action>
				</item>
				<item label="Shutdown">
					<action name="Execute">
						<command>/usr/bin/reboot.sh</command>
					</action>
				</item>
		</menu>
	</menu>
</openbox_menu>
